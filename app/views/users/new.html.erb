<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :organization %>
      <%= f.email_field :organization %>

      <%= f.label :address_line_1, "Address Line 1" %>
      <%= f.email_field :address_line_1 %>

      <%= f.label :address_line_2, "Address Line 2" %>
      <%= f.email_field :address_line_2 %>

      <%= f.label :city %>
      <%= f.email_field :city %>

      <%= f.label :zip_code, "Zip Code" %>
      <%= f.email_field :zip_code %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
